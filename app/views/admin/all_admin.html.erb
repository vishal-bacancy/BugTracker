<table border="10" frame="VOID" rules="ALL">
  <tr>
    <th>User Name</th>
    <th>Role</th>
    <th> Action </th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td>
      <%= user.username %>
    </td>
    <td>
      <%= user.roles.fullname %>
    </td>
    <td>
        
        <% if user.delete_user %>
            <%= link_to "Restore User",action: "soft_delete", id: user.id,isdelete: false, method: 'get',data: {
                    
                    confirm: "Are you sure?"
                  }  %>    
        <% else %>
           <%= link_to "Delete User",action: "soft_delete", id: user.id,isdelete: true,method: 'get', data: {
                    confirm: "Are you sure?"
                  }  %>    
        <% end %>
        
          
    </td>
   
   
  </tr>
    
  <% end %>
</table>
